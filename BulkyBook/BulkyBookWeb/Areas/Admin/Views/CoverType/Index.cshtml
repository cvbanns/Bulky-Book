@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List Of Cover Types</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br />
    <br />
    <table class="table table-striped table-bordered" style="width:100%">

    <thead>
        <tr>
            <th>
               Cover Type
            </th>
            
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var coverType in Model)
        {
            <tr>
                <td width="50%">
                    @coverType.Name
                </td>
               
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-controller="CoverType" asp-route-id="@coverType.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-action="Delete" asp-controller="CoverType" asp-route-id="@coverType.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

